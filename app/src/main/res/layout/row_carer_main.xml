<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mat="http://schemas.android.com/apk/res-auto"
    style="@style/Carer.Row"
    mat:cardBackgroundColor="@color/white"
    mat:cardCornerRadius="4dp"
    mat:cardElevation="4dp"
    mat:cardUseCompatPadding="true">

    <RelativeLayout
        style="@style/Carer.Row"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/row_avatar"
            style="@style/Carer.Row"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/description_avatar" />

        <LinearLayout
            style="@style/Carer.Row"
            android:layout_toEndOf="@+id/row_avatar"
            android:layout_toRightOf="@+id/row_avatar"
            android:orientation="@integer/screen_orientation">

            <LinearLayout
                style="@style/Carer.Row"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/row_report"
                    style="@style/Carer.Row.Subrow"
                    android:drawableTop="@drawable/ic_cloud_upload_black_24dp" />

                <TextView
                    android:id="@+id/row_log"
                    style="@style/Carer.Row.Subrow"
                    android:drawableTop="@drawable/ic_phone_android_black_24dp" />

                <TextView
                    android:id="@+id/row_walk"
                    style="@style/Carer.Row.Subrow"
                    android:drawableTop="@drawable/ic_directions_walk_black_24dp" />

                <TextView
                    android:id="@+id/row_ride"
                    style="@style/Carer.Row.Subrow"
                    android:drawableTop="@drawable/ic_directions_car_black_24dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/row_name"
                style="@style/Carer.Row"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_before_carer_name"
                android:layout_marginStart="@dimen/padding_before_carer_name"
                android:background="@color/transparent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <include layout="@layout/buttons_carer_row" />

        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>