<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_2_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0"
    android:orientation="vertical"
    android:visibility="visible">

    <TextView
        android:id="@+id/txt_header"
        style="@style/InstallationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/choose_a_mode"
        android:textColor="@color/red500" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_carer"
            style="@style/InstallationButton"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:text="@string/show_what_mom_do"
            android:textColor="@color/blue700" />

        <ImageButton
            android:id="@+id/btn_carer"
            style="@style/InstallationButton"
            android:layout_width="wrap_content"
            android:layout_weight="0"
            android:clickable="true"
            android:contentDescription="@string/install_in_carer_mode"
            android:onClick="setMode"
            app:srcCompat="@drawable/ic_carer2" />

        <ImageButton
            android:id="@+id/btn_cared"
            style="@style/InstallationButton"
            android:layout_width="wrap_content"
            android:layout_weight="0"
            android:clickable="true"
            android:contentDescription="@string/install_in_cared_mode"
            android:onClick="setMode"
            app:srcCompat="@drawable/ic_cared2" />

        <TextView
            android:id="@+id/txt_cared"
            style="@style/InstallationButton"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:text="@string/report_what_u_do"
            android:textColor="@color/amber900" />

    </LinearLayout>

</LinearLayout>